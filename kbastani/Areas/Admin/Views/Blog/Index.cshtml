@using Domain

@model IEnumerable<BlogPost>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-2xl font-bold mb-4">Blog Posts</h1>

<a asp-action="Create" class="bg-green-600 text-white px-4 py-2 rounded inline-block mb-4">New Post</a>

@* <p class="text-sm text-blue-600">
    @post.Category.NameEn
</p>

<div class="flex flex-wrap gap-2 mt-2">
    @foreach (var t in post.BlogPostTags)
    {
        <span class="px-2 py-1 bg-gray-200 rounded text-sm">
            @t.Tag.NameEn
        </span>
    }
</div> *@

<table class="min-w-full bg-white rounded shadow">
    <thead>
        <tr class="border-b">
            <th class="p-2">ID</th>
            <th class="p-2">Title (FA)</th>
            <th class="p-2">Title (EN)</th>
            <th class="p-2">Status</th>
            <th class="p-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr class="border-b">
                <td class="p-2">@p.BlogPostId</td>
                <td class="p-2">@p.TitleFa</td>
                <td class="p-2">@p.TitleEn</td>
                <td class="p-2">
                    @(p.IsPublished ? "Published" : "Draft")
                </td>
                <td class="p-2 space-x-2">
                    <a asp-action="Edit" asp-route-id="@p.BlogPostId" class="text-blue-600">Edit</a>
                    <form asp-action="Delete" asp-route-id="@p.BlogPostId" method="post" class="inline">
                        <button class="text-red-600">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


