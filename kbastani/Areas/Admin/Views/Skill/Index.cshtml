@using Domain
@model IEnumerable<Skill>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-2xl font-bold mb-4">Skills</h1>

<a asp-action="Create" class="bg-green-600 text-white px-4 py-2 rounded inline-block mb-4">New Skill</a>

<table class="min-w-full bg-white rounded shadow">
    <thead>
        <tr class="border-b">
            <th class="p-2">Name (FA)</th>
            <th class="p-2">Name (EN)</th>
            <th class="p-2">Level</th>
            <th class="p-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr class="border-b">
                <td class="p-2">@s.NameFa</td>
                <td class="p-2">@s.NameEn</td>
                <td class="p-2">@s.Level%</td>
                <td class="p-2">
                    <a asp-action="Edit" asp-route-id="@s.SkillId" class="text-blue-600">Edit</a>
                    <form asp-action="Delete" asp-route-id="@s.SkillId" method="post" class="inline">
                        <button class="text-red-600 ml-2">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
