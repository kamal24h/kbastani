<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 text-gray-800">
    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <h1 class="text-xl font-bold">Portfolio</h1>
            <nav class="space-x-4">
                <a asp-controller="Home" asp-action="Index" class="text-blue-600 hover:underline">@Localizer["Welcome"]</a>
                <a asp-controller="Blog" asp-action="Index" class="text-blue-600 hover:underline">@Localizer["Blog"]</a>
                <a href="?culture=fa" class="ml-4">FA</a>
                <a href="?culture=en" class="ml-2">EN</a>
            </nav>
        </div>
    </header>
    <main class="max-w-7xl mx-auto px-4 py-6">
        @RenderBody()
    </main>
</body>
</html>
