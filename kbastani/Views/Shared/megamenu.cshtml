@using Domain
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject IViewLocalizer Localizer

@{
    var culture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
}

<!DOCTYPE html>
<html lang="@culture" dir="@(culture == "fa" ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Portfolio</title>

    <link href="~/css/site.css" rel="stylesheet" />

    <script>
        (function () {
            const saved = localStorage.getItem('theme');
            if (saved === 'dark') document.documentElement.classList.add('dark');
        })();
    </script>
</head>

<body class="bg-gray-100 dark:bg-gray-950 text-gray-800 dark:text-gray-100 transition-colors duration-300">

    <!-- NAVBAR -->
    <header class="bg-white/80 dark:bg-gray-900/80 backdrop-blur shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">

            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index"
               class="text-2xl font-bold text-blue-600 dark:text-blue-400">
                Portfolio
            </a>

            <!-- Desktop Navigation -->
            <nav class="hidden md:flex items-center gap-6 text-sm">

                <a asp-controller="Home" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Home"]
                </a>

                <a asp-controller="About" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["About"]
                </a>

                <a asp-controller="Resume" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Resume"]
                </a>

                <!-- PROJECTS MEGA MENU -->
                <div class="relative group">
                    <button class="hover:text-blue-600 dark:hover:text-blue-400">
                        @Localizer["Projects"]
                    </button>

                    <div class="absolute left-0 mt-3 w-[600px] bg-white dark:bg-gray-900 shadow-xl rounded-xl p-6 hidden group-hover:block">
                        <div class="grid grid-cols-2 gap-6">

                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">
                                    Web Development
                                </h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-controller="Project" asp-action="Index" class="hover:underline">ASP.NET Core</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" class="hover:underline">React / Next.js</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" class="hover:underline">TailwindCSS</a></li>
                                </ul>
                            </div>

                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">
                                    Backend & Architecture
                                </h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-controller="Project" asp-action="Index" class="hover:underline">Microservices</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" class="hover:underline">Clean Architecture</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" class="hover:underline">SQL / EF Core</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- BLOG MEGA MENU -->
                <div class="relative group">
                    <button class="hover:text-blue-600 dark:hover:text-blue-400">
                        @Localizer["Blog"]
                    </button>

                    <div class="absolute left-0 mt-3 w-[600px] bg-white dark:bg-gray-900 shadow-xl rounded-xl p-6 hidden group-hover:block">
                        <div class="grid grid-cols-2 gap-6">

                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">
                                    Categories
                                </h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-controller="Blog" asp-action="Index" class="hover:underline">Programming</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" class="hover:underline">Career</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" class="hover:underline">Migration</a></li>
                                </ul>
                            </div>

                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">
                                    Popular Tags
                                </h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-controller="Blog" asp-action="Index" class="hover:underline">C#</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" class="hover:underline">ASP.NET Core</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" class="hover:underline">EF Core</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>

                <a asp-controller="Contact" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Contact"]
                </a>

                <!-- Language Switch -->
                <form id="langForm" asp-controller="Home" asp-action="SetLanguage" method="post">
                    <select name="culture" onchange="document.getElementById('langForm').submit()"
                            class="border dark:border-gray-700 bg-white dark:bg-gray-800 text-xs rounded px-2 py-1">
                        <option value="fa" selected="@(culture == "fa" ? "selected" : null)">FA</option>
                        <option value="en" selected="@(culture == "en" ? "selected" : null)">EN</option>
                    </select>
                </form>

                <!-- Login / Logout -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button class="text-red-600 dark:text-red-400 hover:underline">
                            @Localizer["Logout"]
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login"
                       class="text-blue-600 dark:text-blue-400 hover:underline">
                        @Localizer["Login"]
                    </a>

                    <a asp-controller="Account" asp-action="Register"
                       class="text-green-600 dark:text-green-400 hover:underline">
                        @Localizer["Register"]
                    </a>
                }

                <!-- Dark Mode Toggle -->
                <button id="themeToggle"
                        class="ml-2 w-9 h-9 flex items-center justify-center rounded-full border border-gray-300 dark:border-gray-700">
                    <span id="themeIcon">🌙</span>
                </button>

            </nav>

            <!-- Mobile Menu Button -->
            <button id="mobileMenuBtn" class="md:hidden text-2xl">☰</button>

        </div>

        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden bg-white dark:bg-gray-900 border-t dark:border-gray-800 p-4 space-y-4">

            <a asp-controller="Home" asp-action="Index" class="block">@Localizer["Home"]</a>
            <a asp-controller="About" asp-action="Index" class="block">@Localizer["About"]</a>
            <a asp-controller="Resume" asp-action="Index" class="block">@Localizer["Resume"]</a>
            <a asp-controller="Project" asp-action="Index" class="block">@Localizer["Projects"]</a>
            <a asp-controller="Blog" asp-action="Index" class="block">@Localizer["Blog"]</a>
            <a asp-controller="Contact" asp-action="Index" class="block">@Localizer["Contact"]</a>

            @if (SignInManager.IsSignedIn(User))
            {
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button class="text-red-600">@Localizer["Logout"]</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="block">@Localizer["Login"]</a>
                <a asp-controller="Account" asp-action="Register" class="block">@Localizer["Register"]</a>
            }
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="min-h-screen">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white dark:bg-gray-900 border-t dark:border-gray-800 mt-10">
        <div class="max-w-7xl mx-auto px-4 py-6 text-center text-gray-600 dark:text-gray-400 text-sm">
            © @DateTime.Now.Year — @Localizer["AllRightsReserved"]
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        // Dark Mode
        const btn = document.getElementById('themeToggle');
        const icon = document.getElementById('themeIcon');

        function setIcon() {
            icon.textContent = document.documentElement.classList.contains('dark') ? '☀️' : '🌙';
        }
        setIcon();

        btn.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
            localStorage.setItem('theme',
                document.documentElement.classList.contains('dark') ? 'dark' : 'light'
            );
            setIcon();
        });

        // Mobile Menu
        const mobileBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');

        mobileBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
