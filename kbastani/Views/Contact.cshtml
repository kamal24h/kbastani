@using DataAccess.Vms
@model ContactFormViewModel
@{
    var culture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    ViewData["Title"] = culture == "fa" ? "تماس با من" : "Contact Me";
}

<div class="max-w-3xl mx-auto px-4 py-10">

    <h1 class="text-4xl font-bold mb-6">
        @(culture == "fa" ? "تماس با من" : "Contact Me")
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 text-green-700 p-4 rounded mb-6">
            @TempData["Success"]
        </div>
    }

    <form method="post" class="space-y-6">

        <div>
            <label class="block mb-1">
                @(culture == "fa" ? "نام" : "Name")
            </label>
            <input asp-for="Name" class="w-full border p-3 rounded" />
        </div>

        <div>
            <label class="block mb-1">
                Email
            </label>
            <input asp-for="Email" class="w-full border p-3 rounded" />
        </div>

        <div>
            <label class="block mb-1">
                @(culture == "fa" ? "موضوع" : "Subject")
            </label>
            <input asp-for="Subject" class="w-full border p-3 rounded" />
        </div>

        <div>
            <label class="block mb-1">
                @(culture == "fa" ? "پیام" : "Message")
            </label>
            <textarea asp-for="Message" rows="6" class="w-full border p-3 rounded"></textarea>
        </div>

        <input type="text" name="website" class="hidden" />

        <button class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700">
            @(culture == "fa" ? "ارسال پیام" : "Send Message")
        </button>

    </form>

</div>
