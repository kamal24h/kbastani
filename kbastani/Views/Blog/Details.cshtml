@if (Model.Comments.Any())
{
    <div class="space-y-4">
        @foreach (var c in Model.Comments.OrderByDescending(x => x.CreatedAt))
        {
            <div class="bg-gray-100 p-4 rounded">
                <p class="font-semibold">@c.User.UserName</p>
                <p class="text-gray-700 mt-1">@c.Body</p>
                <p class="text-xs text-gray-400 mt-2">@c.CreatedAt.ToString("yyyy/MM/dd HH:mm")</p>
            </div>
        }
    </div>
}
else
{
    <p class="text-gray-500">
        @(culture == "fa" ? "هنوز نظری ثبت نشده است." : "No comments yet.")
    </p>
}

@if (User.Identity!.IsAuthenticated)
{
    <form asp-action="AddComment" method="post" class="mt-6 space-y-4">
        <input type="hidden" name="postId" value="@Model.BlogPostId" />

        <textarea name="body" rows="4"
                  class="w-full border rounded p-3"
                  placeholder="@(culture == "fa" ? "نظر خود را بنویسید..." : "Write your comment...")"></textarea>

        <button class="bg-blue-600 text-white px-4 py-2 rounded">
            @(culture == "fa" ? "ارسال نظر" : "Submit Comment")
        </button>
    </form>
}
else
{
    <p class="mt-4 text-gray-600">
        @(culture == "fa"
            ? "برای ارسال نظر باید وارد شوید."
            : "You must be logged in to comment.")
        <a asp-controller="Account" asp-action="Login" class="text-blue-600 underline">
            @(culture == "fa" ? "ورود" : "Login")
        </a>
    </p>
}



