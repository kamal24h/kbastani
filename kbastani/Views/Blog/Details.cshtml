@using Domain
@model BlogPost

@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
}
<div class="bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-bold">
        @(culture == "fa" ? Model.TitleFa : Model.TitleEn)
    </h2>
    <div class="mt-4">
        @(culture == "fa" ? Model.ContentFa : Model.ContentEn)
    </div>
</div>

<h3 class="mt-6 text-lg font-bold">نظرات</h3>
