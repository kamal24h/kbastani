@using Domain
@model IEnumerable<BlogPost>
@{
    var culture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    ViewData["Title"] = "Search";
}

<h1 class="text-2xl font-bold mb-4">
    @(culture == "fa" ? "نتایج جستجو برای" : "Search results for")
    "<span class="text-blue-600">@ViewBag.Query</span>"
</h1>

@if (!Model.Any())
{
    <p class="text-gray-500">
        @(culture == "fa" ? "هیچ نتیجه‌ای یافت نشد." : "No results found.")
    </p>
}
else
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        @foreach (var post in Model)
        {
            <div class="bg-white rounded shadow overflow-hidden">

                @if (!string.IsNullOrEmpty(post.ThumbnailPath))
                {
                    <img src="@post.ThumbnailPath" class="w-full h-48 object-cover" />
                }

                <div class="p-4">

                    <h2 class="text-xl font-bold mb-2">
                        <a asp-action="Details" asp-route-slug="@post.Slug" class="hover:text-blue-600">
                            @(culture == "fa" ? post.TitleFa : post.TitleEn)
                        </a>
                    </h2>

                    <p class="text-gray-600 mb-3">
                        @(culture == "fa" ? post.SummaryFa : post.SummaryEn)
                    </p>

                    <p class="text-sm text-gray-400 mb-3">
                        @post.PublishedAt.ToString("yyyy/MM/dd")
                    </p>

                    <a asp-action="Details" asp-route-slug="@post.Slug"
                       class="text-blue-600 hover:underline">
                        @(culture == "fa" ? "ادامه مطلب" : "Read more")
                    </a>

                </div>
            </div>
        }

    </div>
}
