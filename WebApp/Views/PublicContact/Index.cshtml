@using DataAccess.Vms
@using Domain
@using Microsoft.AspNetCore.Mvc.Localization
@model ContactFormViewModel
@inject IViewLocalizer Localizer

<div class="max-w-2xl mx-auto py-10">
    <h1 class="text-3xl font-bold mb-6">@Localizer["Contact Me"]</h1>

    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 text-green-700 p-3 rounded mb-4">
            @TempData["Success"]
        </div>
    }

    <form asp-action="Index" method="post" class="space-y-4">
        <div>
            <label class="block mb-1">@Localizer["Name"]</label>
            <input asp-for="Name" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="Name" class="text-red-600"></span>
        </div>
        <div>
            <label class="block mb-1">@Localizer["Email"]</label>
            <input asp-for="Email" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="Email" class="text-red-600"></span>
        </div>
        <div>
            <label class="block mb-1">@Localizer["Message"]</label>
            <textarea asp-for="Message" rows="5" class="w-full border rounded px-3 py-2"></textarea>
            <span asp-validation-for="Message" class="text-red-600"></span>
        </div>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">@Localizer["Send"]</button>
    </form>
</div>
