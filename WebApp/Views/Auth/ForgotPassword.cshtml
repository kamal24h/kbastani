@using DataAccess.Vms.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@model ForgotPasswordViewModel
@inject IHtmlLocalizer<SharedResource> Localizer
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = Localizer["ForgotPassword"];
}

<form asp-action="ForgotPassword" method="post" class="space-y-5">
    <div>
        <label class="block mb-1 font-medium">@Localizer["Email"]</label>
        <input asp-for="Email"
               class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700
                      bg-gray-50 dark:bg-gray-800 focus:ring-2 focus:ring-blue-500 outline-none" />
        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
    </div>

    <button type="submit"
            class="w-full py-2 rounded-lg bg-blue-600 hover:bg-blue-700
                   text-white font-semibold transition">
        @Localizer["SendResetLink"]
    </button>
</form>
