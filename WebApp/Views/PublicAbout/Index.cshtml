@using Domain
@using Microsoft.AspNetCore.Mvc.Localization
@using WebApp;
@model About
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    
    var culture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    var pageTitle = culture == "fa" ? "درباره من" : "About Me";
}

<div class="max-w-4xl mx-auto py-10">
    <h3> New Test Kamal = ViewData["Title"]</h3>
    <h1 class="text-3xl font-bold mb-4">@(culture == "fa" ? Model.TitleFa : Model.TitleEn)</h1>
    <p class="text-gray-700 dark:text-gray-300">@(culture == "fa" ? Model.BioFa : Model.BioEn)</p>

    <div class="mt-6">
        <img src="~/@Model.ProfileImagePath" alt="Profile" class="rounded-lg shadow-md" />
    </div>
</div>
