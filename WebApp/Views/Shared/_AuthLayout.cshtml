@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    var culture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    var isRtl = culture == "fa";
}

<!DOCTYPE html>
<html lang="@culture" dir="@(isRtl ? "rtl" : "ltr")"
      class="bg-gray-100 dark:bg-gray-950 text-gray-800 dark:text-gray-100 transition-colors duration-300">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Auth</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <script src="~/js/tailwindcss.browser@4.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />

    <script>
        (function () {
            const saved = localStorage.getItem('theme');
            if (saved === 'dark') document.documentElement.classList.add('dark');
        })();
    </script>
</head>

<body class="min-h-screen flex items-center justify-center px-4">

    <div class="w-full max-w-md bg-white dark:bg-gray-900 shadow-xl rounded-2xl p-8
                border border-gray-200 dark:border-gray-800">

        <div class="text-center mb-6">
            <a asp-controller="Home" asp-action="Index"
               class="text-3xl font-bold text-blue-600 dark:text-blue-400">
                @Localizer["Kamal's Personal Website!"]
            </a>
        </div>

        <h1 class="text-2xl font-bold text-center mb-6 text-blue-600 dark:text-blue-400">
            @Localizer["Login"]
        </h1>

        @RenderBody()

        <div class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
            <a asp-controller="Home" asp-action="Index"
               class="hover:text-blue-600 dark:hover:text-blue-400">
                ← @Localizer["BackToHome"]
            </a>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
