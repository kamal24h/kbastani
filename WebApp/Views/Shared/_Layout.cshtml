@using Domain
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject IViewLocalizer Localizer

@{
    var culture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
}

<!DOCTYPE html>
<html lang="@culture" dir="@(culture == "fa" ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Portfolio</title>

    <link href="~/css/site.css" rel="stylesheet" />

    <script>
        // Load saved theme
        (function () {
            const saved = localStorage.getItem('theme');
            if (saved === 'dark') {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>
</head>

<body class="bg-gray-100 dark:bg-gray-950 text-gray-800 dark:text-gray-100 transition-colors duration-300">

    <!-- NAVBAR -->
    <header class="bg-white/80 dark:bg-gray-900/80 backdrop-blur shadow-sm sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">

            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index"
               class="text-2xl font-bold text-blue-600 dark:text-blue-400">
                Portfolio
            </a>

            <!-- Navigation -->
            <nav class="flex items-center gap-4 text-sm md:text-base">

                <a asp-controller="Home" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Home"]
                </a>

                <a asp-controller="About" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["About"]
                </a>

                <a asp-controller="Resume" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Resume"]
                </a>

                <a asp-controller="Project" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Projects"]
                </a>

                <a asp-controller="Blog" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Blog"]
                </a>

                <a asp-controller="Contact" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Contact"]
                </a>

                <!-- Language Switch -->
                <form id="langForm" asp-controller="Home" asp-action="SetLanguage" method="post">
                    <select name="culture" onchange="document.getElementById('langForm').submit()"
                            class="border dark:border-gray-700 bg-white dark:bg-gray-800 text-xs md:text-sm rounded px-2 py-1">
                        <option value="fa" selected="@(culture == "fa" ? "selected" : null)">FA</option>
                        <option value="en" selected="@(culture == "en" ? "selected" : null)">EN</option>
                    </select>
                </form>

                <!-- Login / Logout -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button class="text-red-600 dark:text-red-400 hover:underline">
                            @Localizer["Logout"]
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login"
                       class="text-blue-600 dark:text-blue-400 hover:underline">
                        @Localizer["Login"]
                    </a>

                    <a asp-controller="Account" asp-action="Register"
                       class="text-green-600 dark:text-green-400 hover:underline">
                        @Localizer["Register"]
                    </a>
                }

                <!-- Dark Mode Toggle -->
                <button id="themeToggle"
                        class="ml-2 w-9 h-9 flex items-center justify-center rounded-full border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-200">
                    <span id="themeIcon">🌙</span>
                </button>

            </nav>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="min-h-screen">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 mt-10">
        <div class="max-w-7xl mx-auto px-4 py-6 text-center text-gray-600 dark:text-gray-400 text-sm">
            © @DateTime.Now.Year — @Localizer["AllRightsReserved"]
        </div>
    </footer>

    <!-- Dark Mode Script -->
    <script>
        const btn = document.getElementById('themeToggle');
        const icon = document.getElementById('themeIcon');

        function setIcon() {
            icon.textContent = document.documentElement.classList.contains('dark') ? '☀️' : '🌙';
        }

        setIcon();

        btn.addEventListener('click', function () {
            document.documentElement.classList.toggle('dark');
            const isDark = document.documentElement.classList.contains('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            setIcon();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
