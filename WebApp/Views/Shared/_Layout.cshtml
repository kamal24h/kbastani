@using Domain
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject IViewLocalizer Localizer

@{
    var culture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    ViewData["Title"] = culture == "fa" ? "کمال" : "Kamal";
    var LogoTitle = culture == "fa" ? "کمال" : "Kamal";
    var isRtl = culture == "fa";
}

<!DOCTYPE html>
<html lang="@culture" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
	
    <script src="~/js/tailwindcss.browser@4.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />

    <script>
        (function () {
            const saved = localStorage.getItem('theme');
            if (saved === 'dark') document.documentElement.classList.add('dark');
        })();
    </script>
</head>

<body class="bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100 transition-colors duration-300">

    <!-- Header -->
    <header class="bg-white/80 dark:bg-gray-900/80 backdrop-blur shadow-sm sticky top-0 z-50">

        <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index"
               class="text-2xl font-bold text-blue-600 dark:text-blue-400">
                @LogoTitle
            </a>

            <!-- Desktop nav -->
            <nav class="hidden md:flex items-center gap-6 text-sm">

                <a asp-controller="Home" asp-action="Index" class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Home"]
                </a>

                <a asp-controller="PublicAbout" asp-action="Index" class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["About"]
                </a>

                <a asp-controller="PublicResume" asp-action="Index" class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Resume"]
                </a>

                <!-- Projects mega menu -->
                <div class="relative group">
                    <button class="hover:text-blue-600 dark:hover:text-blue-400">
                        @Localizer["Projects"]
                    </button>
                    <div class="absolute @(isRtl ? "right-0" : "left-0") mt-3 w-[720px] bg-white dark:bg-gray-900 shadow-xl rounded-xl p-6 hidden group-hover:block">
                        <div class="grid grid-cols-3 gap-6">
                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">@Localizer["Showcase"]</h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-controller="Project" asp-action="Index" class="hover:underline">@Localizer["All projects"]</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" asp-route-type="web" class="hover:underline">Web</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" asp-route-type="backend" class="hover:underline">Backend</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" asp-route-type="architecture" class="hover:underline">Architecture</a></li>
                                </ul>
                            </div>
                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">@Localizer["Tech stack"]</h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-controller="Project" asp-action="Index" asp-route-tech="aspnetcore" class="hover:underline">ASP.NET Core</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" asp-route-tech="efcore" class="hover:underline">EF Core</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" asp-route-tech="tailwind" class="hover:underline">TailwindCSS</a></li>
                                    <li><a asp-controller="Project" asp-action="Index" asp-route-tech="sqlserver" class="hover:underline">SQL Server</a></li>
                                </ul>
                            </div>
                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">@Localizer["Admin tools"]</h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-area="Admin" asp-controller="Project" asp-action="Index" class="hover:underline">@Localizer["Manage projects"]</a></li>
                                    <li><a asp-area="Admin" asp-controller="Skill" asp-action="Index" class="hover:underline">@Localizer["Manage skills"]</a></li>
                                    <li><a asp-area="Admin" asp-controller="Experience" asp-action="Index" class="hover:underline">@Localizer["Manage experience"]</a></li>
                                    <li><a asp-area="Admin" asp-controller="Education" asp-action="Index" class="hover:underline">@Localizer["Manage education"]</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Blog mega menu -->
                <div class="relative group">
                    <button class="hover:text-blue-600 dark:hover:text-blue-400">
                        @Localizer["Blog"]
                    </button>
                    <div class="absolute @(isRtl ? "right-0" : "left-0") mt-3 w-[720px] bg-white dark:bg-gray-900 shadow-xl rounded-xl p-6 hidden group-hover:block">
                        <div class="grid grid-cols-3 gap-6">
                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">@Localizer["Browse"]</h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-controller="Blog" asp-action="Index" class="hover:underline">@Localizer["Latest posts"]</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" asp-route-category="programming" class="hover:underline">@Localizer["Programming"]</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" asp-route-category="career" class="hover:underline">@Localizer["Career"]</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" asp-route-category="migration" class="hover:underline">@Localizer["Migration"]</a></li>
                                </ul>
                            </div>
                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">@Localizer["Tags"]</h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-controller="Blog" asp-action="Index" asp-route-tag="csharp" class="hover:underline">C#</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" asp-route-tag="aspnetcore" class="hover:underline">ASP.NET Core</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" asp-route-tag="efcore" class="hover:underline">EF Core</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index" asp-route-tag="tailwind" class="hover:underline">TailwindCSS</a></li>
                                </ul>
                            </div>
                            <div>
                                <h4 class="font-bold mb-3 text-blue-600 dark:text-blue-400">@Localizer["Admin tools"]</h4>
                                <ul class="space-y-2 text-sm">
                                    <li><a asp-area="Admin" asp-controller="Blog" asp-action="Index" class="hover:underline">@Localizer["Manage posts"]</a></li>
                                    <li><a asp-area="Admin" asp-controller="Category" asp-action="Index" class="hover:underline">@Localizer["Manage categories"]</a></li>
                                    <li><a asp-area="Admin" asp-controller="Tag" asp-action="Index" class="hover:underline">@Localizer["Manage tags"]</a></li>
                                    <li><a asp-area="Admin" asp-controller="Comment" asp-action="Index" class="hover:underline">@Localizer["Moderate comments"]</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <a asp-controller="PublicContact" asp-action="Index" class="hover:text-blue-600 dark:hover:text-blue-400">
                    @Localizer["Contact"]
                </a>

                <!-- Admin quick access (visible only to admins) -->
                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                       class="font-medium text-purple-700 dark:text-purple-400 hover:underline">
                        @Localizer["Admin panel"]
                    </a>
                }

                <!-- Language switch -->
                <form asp-controller="Home" asp-action="SetLanguage" method="post">
                    <select name="culture" onchange="this.form.submit()">
                        <option value="fa" selected="@(Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "fa" ? "selected" : null)">FA</option>
                        <option value="en" selected="@(Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "en" ? "selected" : null)">EN</option>
                    </select>
                </form>

                @* <!-- Language switch -->
                <form id="langForm" asp-controller="Home" asp-action="SetLanguage" method="post">
                    <select name="culture" onchange="document.getElementById('langForm').submit()"
                            class="border dark:border-gray-700 bg-white dark:bg-gray-800 text-xs rounded px-2 py-1">
                        <option value="fa" selected="@(culture == "fa" ? "selected" : null)">FA</option>
                        <option value="en" selected="@(culture == "en" ? "selected" : null)">EN</option>
                    </select>
                </form> *@

                <!-- Auth -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button class="text-red-600 dark:text-red-400 hover:underline">
                            @Localizer["Logout"]
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="text-blue-600 dark:text-blue-400 hover:underline">
                        @Localizer["Login"]
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="text-green-600 dark:text-green-400 hover:underline">
                        @Localizer["Register"]
                    </a>
                }

                <!-- Dark mode toggle -->
                <button id="themeToggle"
                        class="ml-2 w-9 h-9 flex items-center justify-center rounded-full border border-gray-300 dark:border-gray-700">
                    <span id="themeIcon">🌙</span>
                </button>
            </nav>

            <!-- Mobile menu button -->
            <button id="mobileMenuBtn" class="md:hidden text-2xl">☰</button>
        </div>

        <!-- Mobile menu -->
        <div id="mobileMenu" class="hidden md:hidden bg-white dark:bg-gray-900 border-t dark:border-gray-800 p-4 space-y-3">
            <a asp-controller="Home" asp-action="Index" class="block">@Localizer["Home"]</a>
            <a asp-controller="PublicAbout" asp-action="Index" class="block">@Localizer["About"]</a>
            <a asp-controller="PublicResume" asp-action="Index" class="block">@Localizer["Resume"]</a>
            <a asp-controller="Project" asp-action="Index" class="block">@Localizer["Projects"]</a>
            <a asp-controller="Blog" asp-action="Index" class="block">@Localizer["Blog"]</a>
            <a asp-controller="PublicContact" asp-action="Index" class="block">@Localizer["Contact"]</a>

            @if (User.IsInRole("Admin"))
            {
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="block">@Localizer["Admin panel"]</a>
            }

            <div class="flex items-center gap-3">
                <form id="langFormMobile" asp-controller="Home" asp-action="SetLanguage" method="post">
                    <select name="culture" onchange="document.getElementById('langFormMobile').submit()"
                            class="border dark:border-gray-700 bg-white dark:bg-gray-800 text-xs rounded px-2 py-1">
                        <option value="fa" selected="@(culture == "fa" ? "selected" : null)">FA</option>
                        <option value="en" selected="@(culture == "en" ? "selected" : null)">EN</option>
                    </select>
                </form>

                <button id="themeToggleMobile"
                        class="w-9 h-9 flex items-center justify-center rounded-full border border-gray-300 dark:border-gray-700">
                    <span id="themeIconMobile">🌙</span>
                </button>
            </div>

            <div>
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button class="text-red-600">@Localizer["Logout"]</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="block">@Localizer["Login"]</a>
                    <a asp-controller="Account" asp-action="Register" class="block">@Localizer["Register"]</a>
                }
            </div>
        </div>
    </header>

    <!-- Main -->
    <main class="min-h-screen">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-900 border-t dark:border-gray-800 mt-10">
        <div class="max-w-7xl mx-auto px-4 py-6 text-center text-gray-600 dark:text-gray-400 text-sm">
            © @DateTime.Now.Year — @Localizer["AllRightsReserved"]
        </div>
    </footer>
    	
	<script src="~/lib/jquery/dist/jquery.js"></script>

    <!-- Scripts -->
    <script>

        // Dark mode (desktop)
        const btn = document.getElementById('themeToggle');
        const icon = document.getElementById('themeIcon');
        function setIcon() { icon.textContent = document.documentElement.classList.contains('dark') ? '☀️' : '🌙'; }
        if (btn) {
            setIcon();
            btn.addEventListener('click', () => {
                document.documentElement.classList.toggle('dark');
                localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
                setIcon();
            });
        }

        // Dark mode (mobile)
        const btnM = document.getElementById('themeToggleMobile');
        const iconM = document.getElementById('themeIconMobile');
        function setIconM() { if (iconM) iconM.textContent = document.documentElement.classList.contains('dark') ? '☀️' : '🌙'; }
        if (btnM) {
            setIconM();
            btnM.addEventListener('click', () => {
                document.documentElement.classList.toggle('dark');
                localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
                setIconM();
            });
        }

        // Mobile menu toggle
        const mobileBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        if (mobileBtn && mobileMenu) {
            mobileBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
