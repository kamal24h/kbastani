@using DataAccess.Vms
@using Domain
@using Microsoft.AspNetCore.Mvc.Localization
@model ResumeViewModel
@inject IViewLocalizer Localizer

<div class="max-w-4xl mx-auto py-10">
    <h1 class="text-3xl font-bold mb-6">@Localizer["Resume"]</h1>

    <section class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">@Localizer["Work Experience"]</h2>
        <ul class="space-y-3">
            @foreach (var exp in Model.Experiences)
            {
                <li>
                    <strong>@exp.JobTitleEn</strong> - @exp.CompanyEn
                    <div class="text-sm text-gray-600">@exp.StartDate.ToString("yyyy") - @(exp.EndDate?.ToString("yyyy") ?? "Present")</div>
                </li>
            }
        </ul>
    </section>

    <section class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">@Localizer["Education"]</h2>
        <ul class="space-y-3">
            @foreach (var edu in Model.Educations)
            {
                <li>
                    <strong>@edu.DegreeEn</strong> - @edu.UniversityEn
                    <div class="text-sm text-gray-600">@edu.StartDate.ToString("yyyy") - @(edu.EndDate?.ToString("yyyy") ?? "Present")</div>
                </li>
            }
        </ul>
    </section>

    <section>
        <h2 class="text-2xl font-semibold mb-4">@Localizer["Skills"]</h2>
        <ul class="flex flex-wrap gap-2">
            @foreach (var skill in Model.Skills)
            {
                <li class="bg-blue-100 text-blue-700 px-3 py-1 rounded">@skill.NameEn</li>
            }
        </ul>
    </section>
</div>
