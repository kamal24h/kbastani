@using Domain
@model IEnumerable<ForumCategory>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "دسته‌های فروم";
}

<h1 class="text-2xl font-bold mb-4">دسته‌های فروم</h1>

<a asp-action="EditCategory" class="inline-block mb-4 bg-green-600 text-white px-4 py-2 rounded">دسته جدید</a>

<table class="min-w-full bg-white rounded shadow">
    <thead>
        <tr class="border-b">
            <th class="p-2 text-right">ID</th>
            <th class="p-2 text-right">نام (FA)</th>
            <th class="p-2 text-right">نام (EN)</th>
            <th class="p-2 text-right">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr class="border-b">
                <td class="p-2">@c.ForumCategoryId</td>
                <td class="p-2">@c.NameFa</td>
                <td class="p-2">@c.NameEn</td>
                <td class="p-2">
                    <a asp-action="EditCategory" asp-route-id="@c.ForumCategoryId" class="text-blue-600">ویرایش</a>
                </td>
            </tr>
        }
    </tbody>
</table>
