@using Domain
@model ForumCategory
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = Model.ForumCategoryId == 0 ? "دسته جدید" : "ویرایش دسته";
}

<h1 class="text-2xl font-bold mb-4">@ViewData["Title"]</h1>

<form asp-action="EditCategory" method="post" class="space-y-4 bg-white p-4 rounded shadow">
    <input type="hidden" asp-for="ForumCategoryId" />
    <div>
        <label class="block text-sm font-medium mb-1">نام دسته (FA)</label>
        <input asp-for="NameFa" class="w-full border rounded p-2" />
        <span asp-validation-for="NameFa" class="text-red-600 text-sm"></span>
    </div>
    <div>
        <label class="block text-sm font-medium mb-1">Category Name (EN)</label>
        <input asp-for="NameEn" class="w-full border rounded p-2" />
        <span asp-validation-for="NameEn" class="text-red-600 text-sm"></span>
    </div>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">ثبت</button>
</form>
