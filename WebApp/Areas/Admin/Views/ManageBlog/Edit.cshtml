@using Domain
@model BlogPost
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-2xl font-bold mb-6">@Localizer["EditPost"]</h1>

<form asp-action="Edit" method="post" class="space-y-6">

    <input type="hidden" asp-for="BlogPostId"/>

    <div class="bg-white p-4 rounded shadow">
        <label class="block mb-1">@Localizer["Title"]</label>
        <input asp-for="TitleEn" class="w-full border p-2 rounded" />
    </div>

    <div class="bg-white p-4 rounded shadow">
        <label class="block mb-1">@Localizer["SummaryEn"]</label>
        <input asp-for="SummaryEn" class="w-full border p-2 rounded" />
    </div>

    <button class="bg-blue-600 text-white px-4 py-2 rounded">
        @Localizer["Save"]
    </button>
</form>
