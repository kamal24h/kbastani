@using Domain
@model IEnumerable<BlogPost>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-6xl mx-auto py-8">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">@Localizer["BlogPosts"]</h1>
        <a asp-action="Create"
           class="px-4 py-2 bg-blue-600 text-white rounded">
            @Localizer["NewPost"]
        </a>
    </div>

    <table class="min-w-full bg-white dark:bg-gray-900 border dark:border-gray-800">
        <thead class="bg-gray-100 dark:bg-gray-800">
            <tr>
                <th class="px-4 py-2 text-left">@Localizer["Id"]</th>
                <th class="px-4 py-2 text-left">@Localizer["Title"]</th>
                <th class="px-4 py-2 text-left">@Localizer["Published"]</th>
                <th class="px-4 py-2 text-left">@Localizer["Category"]</th>
                <th class="px-4 py-2 text-left">@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="border-t dark:border-gray-800">
                <td class="px-4 py-2">@item.BlogPostId</td>
                <td class="px-4 py-2">@item.TitleEn</td>
                <td class="px-4 py-2">@item.IsPublished</td>
                <td class="px-4 py-2">@item.Category?.NameEn</td>
                <td class="px-4 py-2 space-x-2">
                    <a asp-action="Edit" asp-route-id="@item.BlogPostId"
                       class="text-blue-600">Edit</a>

                    <form asp-action="Delete" asp-route-id="@item.BlogPostId"
                          method="post" class="inline">
                        <button type="submit"
                                class="text-red-600"
                                onclick="return confirm('Delete this post?');">
                                @Localizer["Delete"]
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>



