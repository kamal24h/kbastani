@using Domain
@model IEnumerable<Project>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-2xl font-bold mb-4">Projects</h1>

<a asp-action="Create" class="bg-green-600 text-white px-4 py-2 rounded inline-block mb-4">New Project</a>

<table class="min-w-full bg-white rounded shadow">
    <thead>
        <tr class="border-b">
            <th class="p-2">Image</th>
            <th class="p-2">Title (EN)</th>
            <th class="p-2">URL</th>
            <th class="p-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr class="border-b">
                <td class="p-2">
                    @if (!string.IsNullOrEmpty(p.ImagePath))
                    {
                        <img src="@p.ImagePath" class="w-20 h-20 object-cover rounded" />
                    }
                </td>
                <td class="p-2">@p.TitleEn</td>
                <td class="p-2">
                    @if (!string.IsNullOrEmpty(p.ProjectUrl))
                    {
                        <a href="@p.ProjectUrl" target="_blank" class="text-blue-600 underline">Visit</a>
                    }
                </td>
                <td class="p-2">
                    <a asp-action="Edit" asp-route-id="@p.ProjectId" class="text-blue-600">Edit</a>
                    <form asp-action="Delete" asp-route-id="@p.ProjectId" method="post" class="inline">
                        <button class="text-red-600 ml-2">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
