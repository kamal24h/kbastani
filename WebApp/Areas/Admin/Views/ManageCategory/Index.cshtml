@using Domain
@model IEnumerable<BlogCategory>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-6xl mx-auto py-8">

    <h1 class="text-2xl font-bold mb-6">@Localizer["ManageCategory"]</h1>

    <a asp-action="Create"
       class="bg-green-600 text-white px-4 py-2 rounded inline-block mb-4">
        @Localizer["Create"]
    </a>

    <table class="min-w-full bg-white dark:bg-gray-900 border dark:border-gray-800">
        <thead class="bg-gray-100 dark:bg-gray-800">
            <tr>
                <th class="px-4 py-2 text-left">@Localizer["BlogCategoryId"]</th>
                <th class="px-4 py-2 text-left">@Localizer["NameEn"]</th>
                <th class="px-4 py-2 text-left">@Localizer["NameFa"]</th>
                <th class="px-4 py-2 text-left">@Localizer["Slug"]</th>
                <th class="px-4 py-2 text-left">@Localizer["Actions"]</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var u in Model)
        {
            <tr class="border-t dark:border-gray-800">
                <td class="px-4 py-2">@u.BlogCategoryId</td>
                <td class="px-4 py-2">@u.NameEn</td>
                <td class="px-4 py-2">@u.NameFa</td>
                <td class="px-4 py-2">@u.Slug</td>            

                <td class="px-4 py-2 space-x-2">
                    <a asp-action="Edit" asp-route-id="@u.BlogCategoryId"
                       class="text-blue-600 hover:underline">
                            @Localizer["Edit"]
                    </a>

                        <a asp-action="Delete" asp-route-id="@u.BlogCategoryId"
                       class="text-red-600 hover:underline"
                       onclick="return confirm('Delete this user?');">
                            @Localizer["Delete"]
                    </a>

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>






