@using Domain
@model IEnumerable<Comment>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-6xl mx-auto py-8">

    <h1 class="text-2xl font-bold mb-6">Comment Moderation</h1>

    <table class="min-w-full bg-white dark:bg-gray-900 border dark:border-gray-800">
        <thead class="bg-gray-100 dark:bg-gray-800">
            <tr>
                <th class="px-4 py-2 text-left">User</th>
                <th class="px-4 py-2 text-left">Post</th>
                <th class="px-4 py-2 text-left">Content</th>
                <th class="px-4 py-2 text-left">Date</th>
                <th class="px-4 py-2 text-left">Status</th>
                <th class="px-4 py-2 text-left">Actions</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var c in Model)
        {
            <tr class="border-t dark:border-gray-800">
                <td class="px-4 py-2">@c.User.UserName</td>

                <td class="px-4 py-2">
                    <a asp-area="" asp-controller="Blog" asp-action="Details" asp-route-slug="@c.Post.Slug"
                       class="text-blue-600 dark:text-blue-400 hover:underline">
                        @c.Post.TitleEn
                    </a>
                </td>

                <td class="px-4 py-2">@c.Body</td>

                <td class="px-4 py-2">@c.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</td>

                <td class="px-4 py-2">
                    @if (c.IsApproved)
                    {
                        <span class="text-green-600 font-semibold">Approved</span>
                    }
                    else
                    {
                        <span class="text-yellow-600 font-semibold">Pending</span>
                    }
                </td>

                <td class="px-4 py-2 space-x-2">

                    @if (!c.IsApproved)
                    {
                        <form asp-action="Approve" asp-route-id="@c.CommentId" method="post" class="inline">
                            <button class="text-green-600 hover:underline">Approve</button>
                        </form>
                    }

                    @if (c.IsApproved)
                    {
                        <form asp-action="Reject" asp-route-id="@c.CommentId" method="post" class="inline">
                            <button class="text-yellow-600 hover:underline">Reject</button>
                        </form>
                    }

                    <form asp-action="Delete" asp-route-id="@c.CommentId" method="post" class="inline">
                        <button class="text-red-600 hover:underline"
                                onclick="return confirm('Delete this comment?');">
                            Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>




