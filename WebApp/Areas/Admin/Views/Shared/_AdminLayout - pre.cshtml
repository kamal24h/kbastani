@using Domain
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@using Microsoft.AspNetCore.Mvc.Localization
@using WebApp
@inject IHtmlLocalizer<SharedResource> Localizer
@* @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers *@

@{
    var culture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    // ViewData["Title"] = culture == "fa" ? "کمال" : "Kamal";
    // var LogoTitle = culture == "fa" ? "کمال" : "Kamal";
    var isRtl = culture == "fa";
}

<!DOCTYPE html>
<html lang="@culture" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @Localizer["AdminPanel"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <script src="~/js/tailwindcss.browser@4.js"></script>
	<link href="~/css/site.css" rel="stylesheet" />

    <script>
        (function () {
            const saved = localStorage.getItem('theme');
            if (saved === 'dark') document.documentElement.classList.add('dark');
        })();
    </script>

</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100">

    <!-- Admin Navbar -->
    <header class="bg-white dark:bg-gray-800 shadow">
        <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">

            <!-- Logo / Back to Public -->
            <div class="flex items-center gap-4">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="text-xl font-bold text-blue-400 dark:text-blue-200 hover:underline">
                    ← @Localizer["Back to Site"]
                </a>
                <span class="text-gray-600 dark:text-gray-300 font-semibold">@Localizer["AdminPanel"]</span>
            </div>

            <!-- Links -->
            <nav class="flex items-center gap-6 text-sm">
                <a asp-area="Admin" asp-controller="ManageResume" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">@Localizer["ManageResume"]</a>

                <a asp-area="Admin" asp-controller="ManageAbout" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">@Localizer["ManageAbout"]</a>

                <a asp-area="Admin" asp-controller="ManageCategory" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">@Localizer["BlogCategories"]</a>

                <a asp-area="Admin" asp-controller="ManageForum" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">@Localizer["Forum"]</a>

                <a asp-area="Admin" asp-controller="ManageBlog" asp-action="Index"
                   class="hover:text-blue-600 dark:hover:text-blue-400">@Localizer["Blogs"]</a>

                <!-- Home quick access -->
                
                <a asp-area ="" asp-controller="Home" asp-action="Index"
                    class="font-medium text-purple-700 dark:text-purple-400 hover:underline">
                    @Localizer["Home"]
                </a>               

                <!-- Language switch -->
                <form asp-action="SetLanguage" method="post">
                    <select name="culture" onchange="this.form.submit()">
                        <option value="fa" selected="@(Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "fa" ? "selected" : null)">FA</option>
                        <option value="en" selected="@(Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "en" ? "selected" : null)">EN</option>
                    </select>
                </form>
                   
                <!-- Logout -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                        <button type="submit"
                                class="text-red-600 dark:text-red-400 hover:underline">
                            @Localizer["Logout"]
                        </button>
                    </form>
                }
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-6">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-10">
        <div class="max-w-7xl mx-auto px-4 py-6 text-center text-gray-600 dark:text-gray-400 text-sm">
            © @DateTime.Now.Year — @Localizer["AdminPanel"]
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
