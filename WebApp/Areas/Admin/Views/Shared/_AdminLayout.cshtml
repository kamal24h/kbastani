@using Domain
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@using Microsoft.AspNetCore.Mvc.Localization
@using WebApp
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    var culture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    var isRtl = culture == "fa";
}

<!DOCTYPE html>
<html lang="@culture" dir="@(isRtl ? "rtl" : "ltr")"
      class="bg-gray-100 dark:bg-gray-950 text-gray-800 dark:text-gray-100 transition-colors duration-300">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="~/css/site.css" rel="stylesheet" />

    <script>
        (function () {
            const saved = localStorage.getItem('theme');
            if (saved === 'dark') document.documentElement.classList.add('dark');
        })();
    </script>
</head>

<body class="flex min-h-screen">

    <!-- Mobile Toggle Button -->
    <button id="mobileMenuBtn"
            class="md:hidden fixed top-4 @(isRtl ? "left-4" : "right-4") z-50
                   bg-blue-600 text-white p-2 rounded-lg shadow-lg">
        ☰
    </button>

    <!-- Sidebar -->
    <aside id="sidebar"
           class="w-64 bg-white dark:bg-gray-900 border-r dark:border-gray-800 p-4 space-y-4
                  fixed md:static inset-y-0 @(isRtl ? "right-0" : "left-0")
                  transform md:translate-x-0 transition-transform duration-300 -translate-x-full md:translate-x-0 z-40">

        <div class="text-2xl font-bold text-blue-600 dark:text-blue-400 mb-6 text-center">
            Admin Panel
        </div>

        <nav class="space-y-2 text-sm">

            <!-- Dashboard -->
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>📊</span> داشبورد / Dashboard
            </a>

            <!-- Blog -->
            <div class="font-semibold text-gray-500 dark:text-gray-400 mt-4 mb-1 flex items-center gap-2">
                <span>📝</span> مدیریت بلاگ / Blog
            </div>

            <a asp-area="Admin" asp-controller="Blog" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>📰</span> پست‌ها / Posts
            </a>

            <a asp-area="Admin" asp-controller="BlogCategory" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>📂</span> دسته‌بندی‌ها / Categories
            </a>

            <a asp-area="Admin" asp-controller="BlogTag" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>🏷️</span> تگ‌ها / Tags
            </a>

            <a asp-area="Admin" asp-controller="Comment" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>💬</span> نظرات / Comments
            </a>

            <!-- Forum -->
            <div class="font-semibold text-gray-500 dark:text-gray-400 mt-4 mb-1 flex items-center gap-2">
                <span>💭</span> مدیریت فروم / Forum
            </div>

            <a asp-area="Admin" asp-controller="Forum" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>📌</span> موضوعات / Topics
            </a>

            <a asp-area="Admin" asp-controller="ForumCategory" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>📁</span> دسته‌بندی‌ها / Categories
            </a>

            <!-- Resume -->
            <div class="font-semibold text-gray-500 dark:text-gray-400 mt-4 mb-1 flex items-center gap-2">
                <span>📄</span> مدیریت رزومه / Resume
            </div>

            <a asp-area="Admin" asp-controller="ResumeProject" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>🚀</span> پروژه‌ها / Projects
            </a>

            <a asp-area="Admin" asp-controller="ResumeEducation" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>🎓</span> تحصیلات / Education
            </a>

            <a asp-area="Admin" asp-controller="ResumeSkill" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>⚙️</span> مهارت‌ها / Skills
            </a>

            <a asp-area="Admin" asp-controller="ResumeAbout" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>👤</span> درباره من / About Me
            </a>

            <!-- User Management -->
            <div class="font-semibold text-gray-500 dark:text-gray-400 mt-4 mb-1 flex items-center gap-2">
                <span>🧑‍💼</span> مدیریت کاربران / Users
            </div>

            <a asp-area="Admin" asp-controller="User" asp-action="Index"
               class="flex items-center gap-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">
                <span>👥</span> کاربران / Users
            </a>

        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6">

        <!-- Topbar -->
        <div class="flex justify-between items-center mb-6">

            <h1 class="text-xl font-bold">@ViewData["Title"]</h1>

            <div class="flex items-center gap-4">

                <!-- Language Switch -->
                <form asp-controller="Home" asp-action="SetLanguage" method="post">
                    <select name="culture" onchange="this.form.submit()"
                            class="border dark:border-gray-700 bg-white dark:bg-gray-800 text-sm rounded px-2 py-1">
                        <option value="fa" selected="@(culture == "fa")">FA</option>
                        <option value="en" selected="@(culture == "en")">EN</option>
                    </select>
                </form>

                <!-- Dark Mode Toggle -->
                <button id="themeToggle"
                        class="w-9 h-9 flex items-center justify-center rounded-full border border-gray-300 dark:border-gray-700">
                    <span id="themeIcon">🌙</span>
                </button>

                <!-- Logout -->
                <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post">
                    <button class="text-red-600 dark:text-red-400 hover:underline">
                        خروج / Logout
                    </button>
                </form>
            </div>
        </div>

        @RenderBody()
    </main>

    <script>
        // Mobile Sidebar Toggle
        const sidebar = document.getElementById('sidebar');
        const mobileBtn = document.getElementById('mobileMenuBtn');

        mobileBtn.addEventListener('click', () => {
            sidebar.classList.toggle('-translate-x-full');
        });

        // Dark Mode Toggle
        const btn = document.getElementById('themeToggle');
        const icon = document.getElementById('themeIcon');

        function setIcon() {
            icon.textContent = document.documentElement.classList.contains('dark') ? '☀️' : '🌙';
        }
        setIcon();

        btn.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
            const isDark = document.documentElement.classList.contains('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            setIcon();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
