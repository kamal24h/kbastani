@using Domain
@model IEnumerable<AppUser>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-6xl mx-auto py-8">

    <h1 class="text-2xl font-bold mb-6">@Localizer["ManageUser"]</h1>

    <table class="min-w-full bg-white dark:bg-gray-900 border dark:border-gray-800">
        <thead class="bg-gray-100 dark:bg-gray-800">
            <tr>
                <th class="px-4 py-2 text-left">@Localizer["UserName"]</th>
                <th class="px-4 py-2 text-left">@Localizer["Email"]</th>
                <th class="px-4 py-2 text-left">@Localizer["Active"]</th>
                <th class="px-4 py-2 text-left">@Localizer["Actions"]</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var u in Model)
        {
            <tr class="border-t dark:border-gray-800">
                <td class="px-4 py-2">@u.UserName</td>
                <td class="px-4 py-2">@u.Email</td>
                <td class="px-4 py-2">
                    @if (u.IsActive)
                    {
                        <span class="text-green-600">@Localizer["Active"]</span>
                    }
                    else
                    {
                        <span class="text-red-600">@Localizer["Inactive"]</span>
                    }
                </td>

                <td class="px-4 py-2 space-x-2">

                    <a asp-action="ToggleActive" asp-route-id="@u.Id"
                       class="text-blue-600 hover:underline">
                            @Localizer["ToggleActive"]
                    </a>

                    <a asp-action="Delete" asp-route-id="@u.Id"
                       class="text-red-600 hover:underline"
                       onclick="return confirm('Delete this user?');">
                            @Localizer["Delete"]
                    </a>

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>






